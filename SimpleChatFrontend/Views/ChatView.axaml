<UserControl xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:vm="using:SimpleChatFrontend.ViewModels"
  mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
  x:Class="SimpleChatFrontend.Views.ChatView"
  x:DataType="vm:ChatViewModel"
>
  <Grid RowDefinitions="10*,75*,15*">
    <StackPanel Grid.Row="0" Background="Blue">
      <Label Content="{Binding Contact.Name}"></Label>
      <Label Content="{Binding Contact.Email}" FontSize="12"></Label>
    </StackPanel>
    <StackPanel Grid.Row="1">

    </StackPanel>
    <StackPanel Grid.Row="2" Background="Green"></StackPanel>
  </Grid>
</UserControl>